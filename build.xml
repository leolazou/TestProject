<project default="run">
  <property name="src.dir" value="src"/>
  <property name="bin.dir" value="bin"/>
  <property name="jar.dir" value="exe"/>
  <property name="main-class" value="SE.mines.HelloWorld"/>
  <property name="jar-name" value="hello.jar"/>

  <target name="clean">
    <delete dir="${bin.dir}"/>
    <delete dir="${jar.dir}"/>
    <echo message="nettoyage terminee"/>
  </target>

  <target name="compile" depends="clean">
    <mkdir dir = "${bin.dir}"/>
    <javac srcdir="${src.dir}" destdir="${bin.dir}"/>
    <echo message="compilation terminee"/>
  </target>

  <target name="jar" depends="compile">
    <mkdir dir = "${jar.dir}"/>
    <javac destfile="${jar.dir}/${jar-name}" basedir="${bin.dir}">
      <manifest>
        <attribute name="Main-Class" value="${Main-Class}"/>
      </manifest>
    <echo message="creation de fichier jar terminee"/>
  </target>

<target name="run" depends="jar">
  <java jar="${jar.dir}/${jar-name}" fork="true"/>
</target>

</project>
